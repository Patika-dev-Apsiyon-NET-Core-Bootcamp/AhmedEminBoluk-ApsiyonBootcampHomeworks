@model CommentViewModel

<h3>@ViewBag.blog.BlogTitle</h3>
<p>@ViewBag.blog.BlogContent</p>

<h4>Yorum Yaz</h4>

<div class="container">
    <form asp-action="Index" method="post">
        <label asp-for="BlogId" class="control-label">Blog Id:</label>
        <input asp-for="BlogId" class="form-control" value="@ViewBag.blog.Id" />

        <label asp-for="UserId" class="control-label">Kullanıcı Adı:</label><br />
        <select asp-for="UserId" asp-items="@(new SelectList(ViewBag.users,"Id","UserName"))">
            <option>Kullanıcı seçiniz...</option>
        </select><br />
        <label asp-for="Description" class="control-label">Yorum:</label>
        <input asp-for="Description" class="form-control" />

        <br />
        <input type="submit" class="btn btn-success" value="Kaydet" />

    </form>
</div>

<table class="table table-bordered">
    <tr>
        <th>Kullanıcı Adı</th>
        <th>Yorum</th>
    </tr>
    @foreach (var item in @ViewBag.blog.Comments)
    {
    <tr>
        <td>@item.User.UserName</td>
        <td>@item.Description</td>
    </tr>
    }
</table>


